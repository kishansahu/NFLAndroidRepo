<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainScrollView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/patroit_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#000000"
        android:gravity="center"
        android:text="Patriots Schedule"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/popup_header_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/regular_season"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#808080"
        android:text="Regular Season"
        android:textSize="@dimen/popup_subheader_text_size"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/game_schedule_list"
        android:layout_width="200dp"
        android:scrollbars="none"
        android:cacheColorHint="#00000000"
        android:layout_height="250dp" >
    </ListView>

</LinearLayout>