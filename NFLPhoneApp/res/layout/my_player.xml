<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_player_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
<HorizontalScrollView
    android:id="@+id/myPlayersSwipper"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:background="@drawable/scorecard_background_small"
    android:fillViewport="true" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@color/white" >

                    <TextView
                        android:id="@+id/allMyplayerpart1"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="ALL"
                        android:textColor="@color/black"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/allmyplayersIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/allMyplayerpart1"
                        android:gravity="center"
                        android:text="MY PLAYERS"
                        android:textColor="@color/black"
                        android:textSize="17dp" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/my_player_player_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp" >

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/myPlayersContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/addaplayerButton"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:background="@color/green"
                        android:src="@drawable/addaplayer" />

                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>
</LinearLayout>