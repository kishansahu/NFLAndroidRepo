<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/scorecard_background_small" >

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_centerVertical="true"
       android:orientation="vertical" >

       <TextView
           android:id="@+id/statCategory"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           android:text="Heading"
           android:textColor="@color/black"
           android:textSize="@dimen/popup_header_text_size"
           android:textStyle="bold" >
       </TextView>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           android:orientation="horizontal" >

           <TextView
               android:id="@+id/firstTeamNameStatYardsCategory"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="NE"
               android:textColor="@color/black"
               android:textSize="@dimen/popup_subheader_text_size"
               android:textStyle="bold" >
           </TextView>

           <TextView
               android:id="@+id/firstTeamStatYardsWidth"
               android:layout_width="wrap_content"
               android:layout_height="10dp"
               android:layout_marginLeft="5dp"
               android:background="@color/grey"
              
               android:textSize="@dimen/popup_subheader_text_size" >
           </TextView>

           <TextView
               android:id="@+id/firstTeamStatYardsScore"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="15dp"
               android:text="57"
               android:textColor="@color/black"
               android:textSize="@dimen/popup_subheader_text_size" >
           </TextView>
       </LinearLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           android:orientation="horizontal" >

           <TextView
               android:id="@+id/secondTeamNameStatYardsCategory"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="GB"
               android:textColor="@color/black"
               android:textSize="@dimen/popup_subheader_text_size"
               android:textStyle="bold" >
           </TextView>

           <TextView
               android:id="@+id/secondTeamStatYardsWidth"
               android:layout_width="wrap_content"
               android:layout_height="10dp"
               android:layout_marginLeft="5dp"
               android:background="@color/black"
            
               android:textSize="@dimen/popup_subheader_text_size" >
           </TextView>

           <TextView
               android:id="@+id/secondTeamStatYardsScore"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="15dp"
               android:text="157"
               android:textColor="@color/black"
               android:textSize="@dimen/popup_subheader_text_size" >
           </TextView>
       </LinearLayout>
   </LinearLayout>

</RelativeLayout>