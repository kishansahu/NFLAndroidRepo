<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myindividualPlayerTab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/favPlayerDetailHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/scorecard_background_small"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/myindividualPlayerPic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:src="@drawable/rob_gronkowski" >

        </ImageView>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/myindividualPlayerName"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:src="@drawable/patriots_medium"
                android:text="Graham Harrell"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/myindividualPlayerGameDetails"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="20/29, 266 YDS, 2TD, 1INT"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/myindividualPlayerDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/patriots_medium"
                android:text="#6 | QB"
                android:textColor="@color/black"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_gravity="center_vertical|right"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/myindividualPlayerTeamPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/patriots" />

            <ImageView
                android:id="@+id/myindividualPlayerFavouritePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_gravity="right"
                android:src="@drawable/star_high" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>