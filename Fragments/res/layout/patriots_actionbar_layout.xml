<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/menuHeader"
        android:layout_width="300dp"
        android:layout_height="fill_parent" 
        android:visibility="invisible">

        <TextView
            android:id="@+id/menuTitle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:text="LiveClips"
            android:textSize="21sp" 
            android:textStyle="bold">
        </TextView>

        <ImageView
            android:id="@+id/closeButtonHeader"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:src="@drawable/crossbutton" >
        </ImageView>

        <!--
        <View
            android:id="@+id/lineView"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#000000" >
        </View>
        -->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/patriotHeader"
        android:layout_width="300dp"
        android:layout_height="fill_parent"
         >

        <ImageView
            android:id="@+id/sliderView"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@drawable/menuicon" >
        </ImageView>

        <Spinner
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/sliderView"
            android:entries="@array/item_arrays" >
        </Spinner>
    </RelativeLayout>

    <Button
        android:id="@+id/alertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="Alerts:Off" >
    </Button>

    <ImageView
        android:id="@+id/scheduleView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="380dp"
        android:src="@drawable/icon_schedule" >
    </ImageView>

    <ImageView
        android:id="@+id/drivesView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@+id/scheduleView"
        android:src="@drawable/icon_drives" >
    </ImageView>

    <ImageView
        android:id="@+id/statsView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@+id/drivesView"
        android:src="@drawable/icon_status" >
    </ImageView>

    <ImageView
        android:id="@+id/playersView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@+id/statsView"
        android:src="@drawable/icon_players" >
    </ImageView>

</RelativeLayout>