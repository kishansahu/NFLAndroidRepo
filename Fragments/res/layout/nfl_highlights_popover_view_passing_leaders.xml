<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/leadersScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

   

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/backButtonImage"
            android:layout_width="100dp"
            android:layout_height="30dp" 
           	android:layout_gravity="center"
           	android:background="#000000"
            android:src="@drawable/back_button_black"/>
        
        <TextView
            android:id="@+id/passing_leaders_text"
            android:layout_width="100dp"
            android:layout_height="30dp"
        	android:background="#000000"
            android:text="Passing Leaders"
            android:textColor="#FFFFFF"
       	    android:textSize="20sp"
            android:textStyle="bold"
             android:textAlignment="center" >
        </TextView>

        <ImageView
            android:id="@+id/doneButtonImage"
            android:layout_width="150dp"
            android:layout_height="30dp" 
           	android:layout_gravity="center"
           	android:background="#000000"
            android:src="@drawable/done_button_black"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#C0C0C0"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/statFirstTeam"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:paddingLeft="10dp"
            android:text="WEEK 5"
            android:textSize="16sp"
            android:textStyle="bold" />
		 
		 
		 <TextView
            android:id="@+id/statSecondTeam"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="100dp"
            android:text="Team"
            android:textSize="16sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/statSecondTeam"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:text="Yds"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:id="@+id/passing_leaders_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>