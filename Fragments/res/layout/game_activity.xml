<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/gameRootView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/matchScoreBoardBackground"
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:background="@drawable/scorecard_background" >

            <LinearLayout
                android:id="@+id/firstTeamLargeIconContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp" >

                <ImageView
                    android:id="@+id/firstTeamLargeIcon"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/packers_helmet" >
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondTeamLargeIconContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp" >

                <ImageView
                    android:id="@+id/secondTeamLargeIcon"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/patriots_helmet" >
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/firstTeamDescriptionContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="55dp"
                android:layout_toRightOf="@id/firstTeamLargeIconContainer"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/firstTeamFirstName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="GREEN BAY"
                    android:textSize="15sp" >
                </TextView>

                <TextView
                    android:id="@+id/firstTeamSecondName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="PACKERS"
                    android:textSize="26sp"
                    android:textStyle="bold" >
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:src="@drawable/white_circle" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:src="@drawable/black_circle" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:src="@drawable/black_circle" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondTeamDescriptionContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginTop="55dp"
                android:layout_toLeftOf="@+id/secondTeamLargeIconContainer"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/secondTeamFirstName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="NEW ENGLAND"
                    android:textSize="15sp" >
                </TextView>

                <TextView
                    android:id="@+id/secondTeamSecondName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="PATRIOTS"
                    android:textSize="26sp"
                    android:textStyle="bold" >
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:src="@drawable/black_circle" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:src="@drawable/black_circle" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:src="@drawable/black_circle" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/matchScoreContainer"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="36dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="start"
                            android:layout_margin="5dp"
                            android:src="@drawable/nflball"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/firstTeamScore"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="21"
                            android:textSize="45sp"
                            android:textStyle="bold" >
                        </TextView>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/matchScoreCardCentralContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/gameQuarterIndex"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:text="4TH"
                        android:textSize="18sp"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/gameQuarterTime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="6:45"
                        android:textSize="32sp"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/gameScoreDescription"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="1st &amp; Goal at GB 10"
                        android:textSize="18sp"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="36dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/secondTeamScore"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="17"
                            android:textSize="45sp"
                            android:textStyle="bold" >
                        </TextView>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="end"
                            android:layout_margin="5dp"
                            android:src="@drawable/nflball" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
		<LinearLayout
            android:id="@+id/matchScoreBoardTabContainer"
            android:layout_width="810dp"
            android:layout_height="160dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:background="@drawable/scorecard_background"
            android:visibility="invisible"
        ></LinearLayout>
        





        <RelativeLayout
            android:id="@+id/filterBoardBackground"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="160dp" >

            <TextView
                android:id="@+id/allPlaysId"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:background="@drawable/border"
                android:clickable="true"
                android:gravity="center"
                android:text="All Plays"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/topPlaysId"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_toRightOf="@id/allPlaysId"
                android:background="@drawable/border"
                android:clickable="true"
                android:gravity="center"
                android:text="Top Plays"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/topRatedId"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_toRightOf="@id/topPlaysId"
                android:background="@drawable/border"
                android:clickable="true"
                android:gravity="center"
                android:text="Top Rated"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/watchAllId"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_toRightOf="@id/topRatedId"
                android:background="@drawable/border"
                android:clickable="true"
                android:gravity="center"
                android:text="122 Plays \u00A0\u00A0\u00A0\u00A0\u00A0\u00A0 \u00A0\u00A0\u00A0\u00A0\u00A0\u00A0\u00A0 Watch All"
                android:textAlignment="viewEnd"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/combinedLayoutForSelectedCategoryAndPlayCardsId"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="205dp"
            android:background="@drawable/nfl_field" >

            <RelativeLayout
                android:id="@+id/selectedCategoryLayoutId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:alpha=".5"
                android:background="@color/white"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/selectedCategoryTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </RelativeLayout>

            <HorizontalScrollView
                android:id="@+id/horizontalScrollViewForVideosId"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/selectedCategoryLayoutId" >

                <LinearLayout
                    android:id="@+id/parentLayoutOfPlayCardsId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:scrollbarAlwaysDrawHorizontalTrack="true" >
                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/menuFragment"
            android:layout_width="300dp"
            android:layout_height="match_parent" />
    </RelativeLayout>

</merge>