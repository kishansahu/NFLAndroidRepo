<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/gameRootView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/matchScoreBoardBackground"
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:background="@drawable/scorecard_background" >

            <LinearLayout
                android:id="@+id/firstTeamLargeIconContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                 >

                <ImageView
                    android:id="@+id/firstTeamLargeIcon"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/packers_helmet" >
                </ImageView>
            </LinearLayout>
			
            <LinearLayout
                android:id="@+id/secondTeamLargeIconContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp" >
            
            <ImageView
                android:id="@+id/secondTeamLargeIcon"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:src="@drawable/patriots_helmet" >
            </ImageView>
			</LinearLayout>
            <LinearLayout
                android:id="@+id/firstTeamDescriptionContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="55dp"
                android:layout_toRightOf="@id/firstTeamLargeIconContainer"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/firstTeamFirstName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="GREEN BAY"
                    android:textSize="15sp" >
                </TextView>

                <TextView
                    android:id="@+id/firstTeamSecondName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="PACKERS"
                    android:textSize="26sp"
                    android:textStyle="bold" >
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:src="@drawable/white_circle" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:src="@drawable/black_circle" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:src="@drawable/black_circle" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondTeamDescriptionContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginTop="55dp"
                android:layout_toLeftOf="@+id/secondTeamLargeIconContainer"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/secondTeamFirstName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="NEW ENGLAND"
                    android:textSize="15sp" >
                </TextView>

                <TextView
                    android:id="@+id/secondTeamSecondName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="PATRIOTS"
                    android:textSize="26sp"
                    android:textStyle="bold" >
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:src="@drawable/black_circle" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:src="@drawable/black_circle" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:src="@drawable/black_circle" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/matchScoreContainer"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" >

                <TextView
                    android:id="@+id/firstTeamScore"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="36dp"
                    android:text="21"
                    android:textSize="45sp"
                    android:textStyle="bold" >
                </TextView>

                <LinearLayout
                    android:id="@+id/matchScoreCardCentralContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/gameQuarterIndex"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:text="4TH"
                        android:textSize="18sp"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/gameQuarterTime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="6:45"
                        android:textSize="32sp"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/gameScoreDescription"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="1st &amp; Goal at GB 10"
                        android:textSize="18sp"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/secondTeamScore"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="36dp"
                    android:text="17"
                    android:textSize="45sp"
                    android:textStyle="bold" >
                </TextView>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/playerTab"
            android:layout_width="810dp"
            android:layout_height="160dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:background="@drawable/scorecard_background"
            android:visibility="invisible" >

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/black" />

            <RelativeLayout
                android:id="@+id/selectedplayerMatchBanner"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.71" >

                <ImageView
                    android:id="@+id/selectedPlayerPic"
                    android:layout_width="75dp"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/rob_gronkowski" >
                </ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/selectedPlayerTeamPic"
                        android:layout_width="180dp"
                        android:layout_height="102dp"
                        android:alpha=".5"
                        android:src="@drawable/patriots_medium" >
                    </ImageView>

                    <ImageView
                        android:id="@+id/selectedPlayerFavouritePic"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/favourite" >
                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="22dp"
                    android:layout_toRightOf="@id/selectedPlayerPic"
                    android:gravity="top"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/selectedPlayerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/patriots_medium"
                        android:text="Graham Harrell"
                        android:textSize="24dp"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/selectedPlayerDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:src="@drawable/patriots_medium"
                        android:text="#6 | QB"
                        android:textSize="18dp"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="22dp"
                    android:layout_toRightOf="@id/selectedPlayerPic"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/gameIdentifier"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="THIS GAME:"
                        android:textSize="18dp"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/selectedPlayerGameDetailsIndexFirst"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="20/29"
                        android:textSize="18dp" >
                    </TextView>

                    <TextView
                        android:id="@+id/selectedPlayerGameDetailsIndexSecond"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="329 YDS"
                        android:textSize="18dp" >
                    </TextView>

                    <TextView
                        android:id="@+id/selectedPlayerGameDetailsIndexThird"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="2 TD"
                        android:textSize="18dp" >
                    </TextView>

                    <TextView
                        android:id="@+id/selectedPlayerGameDetailsIndexFour"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="1 INT"
                        android:textSize="18dp" >
                    </TextView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statTab"
            android:layout_width="810dp"
            android:layout_height="160dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:background="@drawable/scorecard_background"
            android:visibility="invisible" >

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/black" />

            <RelativeLayout
                android:id="@+id/teamStatsYardsMatchBanner"
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:layout_marginLeft="25dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="22dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/statCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heading"
                        android:textSize="20sp"
                        android:textStyle="bold" >
                    </TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/firstTeamNameStatYardsCategory"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:text="NE"
                            android:textSize="15sp"
                            android:textStyle="bold" >
                        </TextView>

                        <TextView
                            android:id="@+id/firstTeamStatYardsWidth"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_marginLeft="25dp"
                            android:background="@color/grey" >
                        </TextView>

                        <TextView
                            android:id="@+id/firstTeamStatYardsScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="57" >
                        </TextView>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/secondTeamNameStatYardsCategory"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:text="GB"
                            android:textSize="15sp"
                            android:textStyle="bold" >
                        </TextView>

                        <TextView
                            android:id="@+id/secondTeamStatYardsWidth"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_marginLeft="25dp"
                            android:background="@color/black" >
                        </TextView>

                        <TextView
                            android:id="@+id/secondTeamStatYardsScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="157" >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/filterBoardBackground"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="160dp" >

            <TextView
                android:id="@+id/allPlaysId"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/border"
                android:clickable="true"
                android:gravity="center"
                android:text="All Plays" />

            <TextView
                android:id="@+id/topPlaysId"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/allPlaysId"
                android:background="@drawable/border"
                android:clickable="true"
                android:gravity="center"
                android:text="Top Plays" />

            <TextView
                android:id="@+id/topRatedId"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/topPlaysId"
                android:background="@drawable/border"
                android:clickable="true"
                android:gravity="center"
                android:text="Top Rated" />

            <TextView
                android:id="@+id/watchAllId"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/topRatedId"
                android:background="@drawable/border"
                android:clickable="true"
                android:gravity="center"
                android:text="122 Plays \u00A0\u00A0\u00A0\u00A0\u00A0\u00A0 \u00A0\u00A0\u00A0\u00A0\u00A0\u00A0\u00A0 Watch All"
                android:textAlignment="viewEnd" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/combinedLayoutForSelectedCategoryAndPlayCardsId"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="200dp"
            android:background="@drawable/nfl_field" >

            <RelativeLayout
                android:id="@+id/selectedCategoryLayoutId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:background="@color/green"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/selectedCategoryTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </RelativeLayout>

            <HorizontalScrollView
                android:id="@+id/horizontalScrollViewForVideosId"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/selectedCategoryLayoutId" >

                <LinearLayout
                    android:id="@+id/parentLayoutOfPlayCardsId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:scrollbarAlwaysDrawHorizontalTrack="true" >
                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/menuFragment"
            android:layout_width="300dp"
            android:layout_height="match_parent" />
    </RelativeLayout>

</merge>