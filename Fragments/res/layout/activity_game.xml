<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/matchScoreBoardBackground"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:background="@drawable/scorecard_background" >

        <ImageView
            android:id="@+id/firstTeamHelmetIcon"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/packers_helmet" >
        </ImageView>

        <ImageView
            android:id="@+id/secondTeamHelmetIcon"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/patriots_helmet" >
        </ImageView>

        <LinearLayout
            android:id="@+id/firstTeamDescriptionContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/firstTeamHelmetIcon"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/firstTeamFirstName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="left"
                android:text="GREEN BAY"
                android:textSize="15sp" >
            </TextView>

            <TextView
                android:id="@+id/firstTeamSecondName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="PACKERS"
                android:textSize="32sp"
                android:textStyle="bold" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:src="@drawable/white_circle" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:src="@drawable/black_circle" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:src="@drawable/black_circle" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondTeamDescriptionContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/secondTeamHelmetIcon"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/secondTeamFirstName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="left"
                android:text="NEW ENGLAND"
                android:textSize="15sp" >
            </TextView>

            <TextView
                android:id="@+id/secondTeamSecondName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="PATRIOTS"
                android:textSize="32sp"
                android:textStyle="bold" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:src="@drawable/black_circle" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:src="@drawable/black_circle" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:src="@drawable/black_circle" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/matchScoreContainer"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" >

            <TextView
                android:id="@+id/firstTeamScore"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="36dp"
                android:text="21"
                android:textSize="45sp"
                android:textStyle="bold" >
            </TextView>

            <LinearLayout
                android:id="@+id/matchScoreCardCentralContainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/gameQuarterIndex"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="4TH"
                    android:textSize="18sp"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/gameQuarterTime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="6:45"
                    android:textSize="32sp"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/gameScoreDescription"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="1st &amp; Goal at GB 10"
                    android:textSize="18sp"
                    android:textStyle="bold" >
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/secondTeamScore"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="36dp"
                android:text="17"
                android:textSize="45sp"
                android:textStyle="bold" >
            </TextView>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/filterBoardBackground"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="160dp"
        android:background="#FF8000" >

        <Button
            android:id="@+id/allPlaysId"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="All Plays" />

        <Button
            android:id="@+id/topPlaysId"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/allPlaysId"
            android:text="Top Plays" />


        <Button
            android:id="@+id/topRatedId"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/topPlaysId"
            android:text="Top Rated" />

                
       <Button
            android:id="@+id/watchAllId"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:text="Watch All" />
       
        <TextView
            android:id="@+id/totalPlaysId"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/watchAllId"
            android:textSize="16sp"
            android:text="122 Plays" />
       
    </RelativeLayout>

    <fragment
        android:id="@+id/topicMenuFragment"
        android:name="com.example.fragments.TopicMenuFragment"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF" />

</merge>