<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playCardFrontSideLayoutId"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/playCardFrontSideTopLayoutId"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/playCardFrontSideTopLayoutTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/playCardFrontSideTopLayoutInfoButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/play_card_info_button" />

        <RatingBar
            android:id="@+id/playCardFrontSideTopLayoutRatingBarId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/playCardFrontSideTopLayoutInfoButtonId"
            android:layout_marginRight="30dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/playCardFrontSidePlaySectionlayoutId"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/playCardFrontSideTopLayoutId"
        android:background="@color/black" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/playCardFrontSideBottomLayoutId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/playCardFrontSidePlaySectionlayoutId" >

        <TextView
            android:id="@+id/playCardFrontSideBottomLayoutTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
             android:textSize="14sp"
            android:textStyle="bold" >
        </TextView>
        
        <ImageButton 
            android:id="@+id/playCardFrontSideBottomLayoutImageButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/contentDescription"/>
    </RelativeLayout>

</RelativeLayout>