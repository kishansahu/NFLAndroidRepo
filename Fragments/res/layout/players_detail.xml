<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myindividualPlayerTab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/black" />

    <RelativeLayout
        android:layout_width="290dp"
        android:layout_height="155dp"
        android:background="@drawable/scorecard_background" >

        <ImageView
            android:id="@+id/myindividualPlayerPic"
            android:layout_width="65dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/rob_gronkowski" >
        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/myindividualPlayerTeamPic"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:alpha=".5"
                android:src="@drawable/patriots_medium" >
            </ImageView>

            <ImageView
                android:id="@+id/myindividualPlayerFavouritePic"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/star_high" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@id/myindividualPlayerPic"
            android:gravity="top"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/myindividualPlayerName"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:src="@drawable/patriots_medium"
                android:text="Graham Harrell"
                android:textSize="18dp"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/myindividualPlayerDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:src="@drawable/patriots_medium"
                android:text="#6 | QB"
                android:textSize="14dp" >
            </TextView>
            
            <TextView
                android:id="@+id/myindividualPlayerGameDetails"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="20/29, 266 YDS, 2TD, 1INT"
                android:textSize="13dp" >
            </TextView>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>