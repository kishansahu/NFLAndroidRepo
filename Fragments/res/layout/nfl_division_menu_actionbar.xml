<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/fragmentMenuHeader"
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/menuTitle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:text="LiveClips"
            android:textSize="21sp"
            android:textStyle="bold" >
        </TextView>

        <ImageView
            android:id="@+id/closeButtonHeader"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:src="@drawable/crossbutton" >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activityMenuHeader"
        android:layout_width="300dp"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/sliderView"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@drawable/menuicon" >
        </ImageView>

        <Spinner
            android:id="@+id/sliderViewSpinner"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/sliderView"
            android:entries="@array/nfl_division_items" >
        </Spinner>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/weekLayout"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="305dp"
        android:orientation="vertical"
        android:layout_marginTop="3dp" >

        <TextView
            android:id="@+id/weekNumber"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:text="5" />

        <TextView
            android:id="@+id/weeks"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="WEEK" />
    </LinearLayout>
    
    <TextView
        android:id="@+id/leadersLayout"
        android:drawableTop="@drawable/icon_drives"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="405dp"
        android:textColor="@color/white"
        android:text="LEADERS"
       
        >
    </TextView>

    <TextView
        android:id="@+id/milestonesLayout"
        android:drawableTop="@drawable/icon_schedule"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="505dp"
        android:textColor="@color/white"
        android:text="MILESTONES"
       
        >
    </TextView>

    <TextView
        android:id="@+id/standingLayout"
        android:drawableTop="@drawable/icon_status"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="605dp"
        android:textColor="@color/white"
        android:text="STANDING"
        
        >
    </TextView>

    <Button
        android:id="@+id/alertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="Alerts:Off" >
    </Button>

</RelativeLayout>