<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.liveclips.nfl"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />
 	
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.liveclips.nfl.session.ApplicationSession"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.liveclips.nfl.activity.AppContentActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.liveclips.nfl.activity.GameActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape" >
        </activity>
         <activity
            android:name="com.liveclips.nfl.activity.NFLHighlightsActivity"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name="com.liveclips.nfl.activity.PlayersActivity"
            android:label="@string/app_name" >
        </activity>
        
         <activity
            android:name="com.liveclips.nfl.activity.DivisionHighlightsActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>